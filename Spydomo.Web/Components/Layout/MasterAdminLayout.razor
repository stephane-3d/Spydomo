@inherits LayoutComponentBase
@namespace Spydomo.Web.Components.Layout
@using MudBlazor
@using Spydomo.Web.Components.Pages.Parts


<MudLayout>

    <MudDrawer Open="true" Variant="DrawerVariant.Mini" Elevation="1" Class="pa-4" Width="220px">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Admin Panel</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
                <MudNavLink Href="/hangfire" Icon="@Icons.Material.Filled.ListAlt">
                    Hangfire
                </MudNavLink>
            <MudNavLink Href="/app/fetch" Icon="@Icons.Material.Filled.ListAlt">
                Fetch data
            </MudNavLink>
            
            <MudNavLink Href="/app/sqltojson" Icon="@Icons.Material.Filled.ListAlt">
                SQL to json
            </MudNavLink>
            
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="p-4">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>
