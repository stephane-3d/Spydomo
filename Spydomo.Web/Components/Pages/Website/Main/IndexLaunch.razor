@page "/launch"
@layout Spydomo.Web.Components.Layout.EmptyLayout

<PageTitle>Spydomo - Competitive intelligence. Curated for you.</PageTitle>

<style>
    .temp-shell {
        min-height: 80vh;
        display: flex;
        align-items: center; /* vertical */
        justify-content: center; /* horizontal */
        padding: 32px 16px;
    }

    .temp-wrap {
        width: min(900px, 100%);
    }

    .temp-grid {
        display: grid;
        grid-template-columns: 1.15fr .85fr;
        gap: 28px;
        align-items: center;
    }

    .temp-h1 {
        font-weight: 800;
        font-size: clamp(2rem, 3vw, 2.6rem);
        margin: 0 0 10px 0;
        line-height: 1.1;
    }

    .temp-lede {
        font-size: 1.08rem;
        line-height: 1.55;
        opacity: .85;
        margin: 0 0 14px 0;
    }

    .temp-meta {
        margin: 0;
        opacity: .8;
    }

        .temp-meta small {
            display: inline-block;
            margin-top: 6px;
            font-size: .95rem;
            opacity: .7;
        }

    .temp-hero {
        text-align: center;
    }

        .temp-hero img {
            max-width: 100%;
            height: auto;
            max-height: 320px;
            border-radius: 18px;
        }

    @@media (max-width: 900px) {
        .temp-grid {
            grid-template-columns: 1fr;
            text-align: center;
        }
    }
</style>

<div class="temp-shell">
    <div class="temp-wrap">
        <div class="temp-grid">
            <div>
                <h1 class="temp-h1">Spydomo is launching soon.</h1>

                <p class="temp-lede">
                    Competitive awareness — curated for you. We track what competitors ship, change, and claim so you don’t have to.
                </p>

                <p class="temp-meta">
                    Contact: <a href="mailto:info@spydomo.com">info@spydomo.com</a><br />
                    <small>Private beta for now.</small>
                </p>
            </div>

            <div class="temp-hero">
                <img src="/img/hero.png" alt="Analyst bot illustration" loading="lazy" />
            </div>
        </div>
    </div>
</div>
