@page "/spydomo-vs-ai-agents"
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Why Spydomo vs AI Agents</PageTitle>

<section class="vs-wrap">

    <!-- HERO -->
    <header class="vs-hero">
        <div class="vs-hero-inner">
            <div>
                <h1>Why Spydomo vs AI Agents</h1>
                <p class="vs-sub">
                    AI agents are powerful — especially for prototypes and one-off research.
                    Spydomo is built for <strong>repeatable competitive awareness</strong> with traceability and consistent output.
                </p>

                <div class="vs-hero-actions">
                    <a class="vs-btn primary" href="/pricing">Try it free</a>
                    <a class="vs-btn" href="/how-it-works">How it works</a>
                </div>

                <p class="vs-note">
                    Spydomo combines automation + AI (including GPT) with sourcing, memory, scoring, trend logic, and workflow —
                    so your team gets dependable signals without maintaining an “agent project.”
                </p>
            </div>

            <div class="vs-hero-card">
                <div class="vs-hero-card-title">Agents are great when</div>
                <ul class="vs-hero-list">
                    <li>You’re prototyping an internal workflow</li>
                    <li>You have an owner who can tune + debug</li>
                    <li>“Good enough” is acceptable</li>
                </ul>

                <div class="divider" style="margin: 14px 0;"></div>

                <div class="vs-hero-card-title">Spydomo is great when</div>
                <ul class="vs-hero-list">
                    <li>You need reliable weekly output</li>
                    <li>Your team needs a consistent UX</li>
                    <li>You care about sources and trust</li>
                </ul>
            </div>
        </div>
    </header>

    <!-- COMPARISON -->
    <section class="vs-compare" aria-label="Comparison table">
        <div class="vs-table">

            <div class="vs-head">
                <div class="vs-cell feature"></div>
                <div class="vs-cell colhead">
                    <div class="vs-coltitle">DIY / Agent Stack</div>
                    <div class="vs-coldesc">Flexible, but you maintain it</div>
                </div>
                <div class="vs-cell colhead sp">
                    <div class="vs-coltitle">Spydomo</div>
                    <div class="vs-coldesc">Productized competitive awareness</div>
                </div>
            </div>

            @Row("Time to value",
            gpt: "Setup, connect tools, define prompts, test, iterate.",
                        sp: "Pick companies/groups. Signals start flowing automatically.",
                        gptKind: "manual", spKind: "check")

            @Row("Reliability",
                        gpt: "Brittle over time: drift, broken parsers, changing pages, edge cases.",
                        sp: "Designed for repeatability: stable pipeline and consistent output.",
                        gptKind: "mixed", spKind: "check")

            @Row("Total cost of ownership",
                        gpt: "An agent becomes a project you maintain, debug, and retune over time.",
                        sp: "Spydomo is a maintained system with consistent output and a workflow your team can rely on.",
                        gptKind: "manual", spKind: "check")

            @Row("Source traceability",
                        gpt: "Depends how you build it; often hard to audit quickly.",
                        sp: "Every insight points back to its original source.",
                        gptKind: "mixed", spKind: "check")

            @Row("Memory & history",
                        gpt: "You build storage, baselines, and “what changed?” logic.",
                        sp: "Built-in history, comparisons, and change detection.",
                        gptKind: "manual", spKind: "check")

            @Row("Noise filtering",
                        gpt: "Easy to over-collect and flood yourself with output.",
                        sp: "Curated signals: scoring, bucketing, and relevance-first UX.",
                        gptKind: "mixed", spKind: "check")

            @Row("Team adoption",
                        gpt: "Often operator-driven (one person runs it).",
                        sp: "A shared product: UI, workflow, and consistent expectations for everyone.",
                        gptKind: "mixed", spKind: "check")

            @Row("What you actually buy",
                        gpt: "A custom automation you own.",
                        sp: "A competitive awareness system built for your use case.",
                        gptKind: "manual", spKind: "check")

        </div>
    </section>

    <!-- CLOSE -->
    <footer class="vs-footer">
        <div class="vs-footer-inner">
            <h2>In short</h2>
            <p class="vs-footer-lead">
                <strong>Agents are powerful.</strong>
                <strong>Spydomo is dependable.</strong>
            </p>
            <p class="vs-footer-sub">
                If your goal is a reliable weekly cadence your team trusts — you’ll want a maintained system, not an ongoing project.
            </p>
            <div class="vs-hero-actions">
                <a class="vs-btn primary" href="/pricing">Try it free</a>
                <a class="vs-btn" href="/use-cases">See use cases</a>
            </div>
        </div>
    </footer>

</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("scrollToTop");
        }
    }

    RenderFragment Row(string feature, string gpt, string sp, string gptKind, string spKind) => __builder =>
    {
        <div class="vs-row">
            <div class="vs-cell feature">
                <div class="vs-feature">@feature</div>
            </div>

            <div class="vs-cell">
                <div class="vs-pill @("k-" + gptKind)">
                    @Icon(gptKind)
                    <span>@Label(gptKind)</span>
                </div>
                <div class="vs-text">@gpt</div>
            </div>

            <div class="vs-cell sp">
                <div class="vs-pill @("k-" + spKind)">
                    @Icon(spKind)
                    <span>@Label(spKind)</span>
                </div>
                <div class="vs-text">@sp</div>
            </div>
        </div>
        ;
    };

    RenderFragment Icon(string kind) => __builder =>
    {
        if (kind == "check")
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M7.7 13.3 4.6 10.2a1 1 0 0 0-1.4 1.4l3.8 3.8a1 1 0 0 0 1.4 0l8.4-8.4a1 1 0 1 0-1.4-1.4l-7.7 7.7z" />
            </svg>
            ;
        }
        else if (kind == "manual")
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M4 10a6 6 0 1 1 6 6H6.5L4 18.5V16a6 6 0 0 1 0-6zm6-4a4 4 0 1 0 0 8 4 4 0 0 0 0-8z" />
            </svg>
            ;
        }
        else
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M5 10a1 1 0 0 1 1-1h8a1 1 0 1 1 0 2H6a1 1 0 0 1-1-1z" />
            </svg>
            ;
        }
    };

    string Label(string kind) => kind switch
    {
        "check" => "Included",
        "manual" => "Manual",
        "mixed" => "Varies",
        _ => "Not included"
    };
}
