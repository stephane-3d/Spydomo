@page "/spydomo-vs-chatgpt"
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Why Spydomo vs ChatGPT</PageTitle>

<section class="vs-wrap">

    <!-- HERO -->
    <header class="vs-hero">
        <div class="vs-hero-inner">
            <div>
                <h1>Why Spydomo vs ChatGPT</h1>
                <p class="vs-sub">
                    ChatGPT is great at answering questions.
                    Spydomo is built to <strong>track your market continuously</strong> and deliver a curated feed of what matters. 
                    Same idea if you use Gemini, Copilot, Claude, etc. — assistants are great for one-off research. Spydomo is for ongoing competitive awareness.
                </p>

                <div class="vs-hero-actions">
                    <a class="vs-btn primary" href="/pricing">Try it free</a>
                    <a class="vs-btn" href="/how-it-works">How it works</a>
                </div>

                <p class="vs-note">
                    Spydomo combines automation and AI (including GPT) with sourcing, memory, and workflow —
                    so you get consistent competitive signals, not one-off answers.
                </p>
            </div>

            <div class="vs-hero-card">
                <div class="vs-hero-card-title">Best for</div>
                <ul class="vs-hero-list">
                    <li>Founders & execs who want signal, not dashboards</li>
                    <li>Teams tracking competitors weekly, not once</li>
                    <li>Anyone tired of “prompting their way” to insight</li>
                </ul>
            </div>
        </div>
    </header>

    <!-- COMPARISON -->
    <section class="vs-compare" aria-label="Comparison table">
        <div class="vs-table">

            <div class="vs-head">
                <div class="vs-cell feature"></div>
                <div class="vs-cell colhead">
                    <div class="vs-coltitle">ChatGPT</div>
                    <div class="vs-coldesc">Answers when you ask</div>
                </div>
                <div class="vs-cell colhead sp">
                    <div class="vs-coltitle">Spydomo</div>
                    <div class="vs-coldesc">Finds what matters—proactively</div>
                </div>
            </div>

            @Row("Getting started",
            gpt: "You create prompts and refine them.",
                        sp: "Pick companies/groups. Spydomo runs in the background.",
                        gptKind: "manual", spKind: "check")

            @Row("Ongoing monitoring",
                        gpt: "No monitoring. You re-run research.",
                        sp: "Continuous tracking with scheduled updates.",
                        gptKind: "minus", spKind: "check")

            @Row("Trend awareness",
                        gpt: "Point-in-time snapshots.",
                        sp: "Trends over time, comparisons, “what changed?”",
                        gptKind: "minus", spKind: "check")

            @Row("Signal curation",
                        gpt: "Everything depends on your questions.",
                        sp: "Filters noise and surfaces shifts and strategic signals.",
                        gptKind: "manual", spKind: "check")

            @Row("Source traceability",
                        gpt: "May cite sources, but output can be opaque.",
                        sp: "Every insight links back to the original source.",
                        gptKind: "mixed", spKind: "check")

            @Row("Workflow output",
                        gpt: "Raw answers you still need to organize.",
                        sp: "A finished product: structured feed, tags, themes, and context.",
                        gptKind: "manual", spKind: "check")

            @Row("Consistency",
                        gpt: "Results vary based on prompt and timing.",
                        sp: "Same system every week—repeatable, comparable outputs.",
                        gptKind: "mixed", spKind: "check")

            @Row("Total cost of ownership",
                        gpt: "Agents are powerful — but you maintain them.",
                        sp: "Spydomo is maintained for you: consistent signals, stable UX, repeatable workflow.",
                        gptKind: "manual", spKind: "check")

            @Row("What you actually buy",
                        gpt: "A general-purpose assistant.",
                        sp: "A competitive awareness system built for your use case.",
                        gptKind: "minus", spKind: "check")

        </div>
    </section>

    <!-- SHORT CLOSE -->
    <footer class="vs-footer">
        <div class="vs-footer-inner">
            <h2>In short</h2>
            <p class="vs-footer-lead">
                <strong>ChatGPT gives answers.</strong>
                <strong>Spydomo gives direction.</strong>
            </p>
            <p class="vs-footer-sub">
                Because in competitive markets, knowing what’s happening isn’t enough — you need to know what matters.
            </p>
            <div class="vs-hero-actions">
                <a class="vs-btn primary" href="/pricing">Try it free</a>
                <a class="vs-btn" href="/use-cases">See use cases</a>
            </div>
        </div>
    </footer>

</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("scrollToTop");
        }
    }

    RenderFragment Row(string feature, string gpt, string sp, string gptKind, string spKind) => __builder =>
    {
        <div class="vs-row">
            <div class="vs-cell feature">
                <div class="vs-feature">@feature</div>
            </div>

            <div class="vs-cell">
                <div class="vs-pill @("k-" + gptKind)">
                    @Icon(gptKind)
                    <span>@Label(gptKind)</span>
                </div>
                <div class="vs-text">@gpt</div>
            </div>

            <div class="vs-cell sp">
                <div class="vs-pill @("k-" + spKind)">
                    @Icon(spKind)
                    <span>@Label(spKind)</span>
                </div>
                <div class="vs-text">@sp</div>
            </div>
        </div>
        ;
    };

    RenderFragment Icon(string kind) => __builder =>
    {
        if (kind == "check")
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M7.7 13.3 4.6 10.2a1 1 0 0 0-1.4 1.4l3.8 3.8a1 1 0 0 0 1.4 0l8.4-8.4a1 1 0 1 0-1.4-1.4l-7.7 7.7z" />
            </svg>
            ;
        }
        else if (kind == "manual")
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M4 10a6 6 0 1 1 6 6H6.5L4 18.5V16a6 6 0 0 1 0-6zm6-4a4 4 0 1 0 0 8 4 4 0 0 0 0-8z" />
            </svg>
            ;
        }
        else
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M5 10a1 1 0 0 1 1-1h8a1 1 0 1 1 0 2H6a1 1 0 0 1-1-1z" />
            </svg>
            ;
        }
    };

    string Label(string kind) => kind switch
    {
        "check" => "Included",
        "manual" => "Manual",
        "mixed" => "Varies",
        _ => "Not included"
    };
}