@page "/spydomo-vs-perplexity"
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Why Spydomo vs Perplexity</PageTitle>

<section class="vs-wrap">

    <!-- HERO -->
    <header class="vs-hero">
        <div class="vs-hero-inner">
            <div>
                <h1>Why Spydomo vs Perplexity</h1>
                <p class="vs-sub">
                    Perplexity is excellent for fast research with citations.
                    Spydomo is built for <strong>ongoing competitive awareness</strong> — tracking, filtering, and summarizing what changed,
                    consistently, week after week.
                </p>

                <div class="vs-hero-actions">
                    <a class="vs-btn primary" href="/pricing">Try it free</a>
                    <a class="vs-btn" href="/how-it-works">How it works</a>
                </div>

                <p class="vs-note">
                    Spydomo combines automation + AI with sourcing, memory, scoring, trend logic, and workflow —
                    so your team gets dependable signals without doing “research sessions” every time.
                </p>
            </div>

            <div class="vs-hero-card">
                <div class="vs-hero-card-title">Best for</div>
                <ul class="vs-hero-list">
                    <li><strong>Perplexity:</strong> one-off research, quick answers, citations</li>
                    <li><strong>Spydomo:</strong> ongoing monitoring, trend detection, curated signals</li>
                    <li>Teams who want a repeatable weekly cadence</li>
                </ul>
            </div>
        </div>
    </header>

    <!-- COMPARISON -->
    <section class="vs-compare" aria-label="Comparison table">
        <div class="vs-table">

            <div class="vs-head">
                <div class="vs-cell feature"></div>
                <div class="vs-cell colhead">
                    <div class="vs-coltitle">Perplexity</div>
                    <div class="vs-coldesc">Great for research sessions</div>
                </div>
                <div class="vs-cell colhead sp">
                    <div class="vs-coltitle">Spydomo</div>
                    <div class="vs-coldesc">Built for ongoing competitive awareness</div>
                </div>
            </div>

            @Row("Primary job",
            gpt: "Answer questions with citations from the web.",
                        sp: "Track your market and deliver curated signals over time.",
                        gptKind: "check", spKind: "check")

            @Row("Ongoing monitoring",
                        gpt: "Manual. You run a new query when you think of it.",
                        sp: "Automatic monitoring with scheduled runs and change detection.",
                        gptKind: "manual", spKind: "check")

            @Row("What changed since last week?",
                        gpt: "You compare outputs yourself across sessions.",
                        sp: "Built-in history and trend logic — designed for week-over-week clarity.",
                        gptKind: "manual", spKind: "check")

            @Row("Noise filtering",
                        gpt: "You can refine queries, but curation is on you.",
                        sp: "Filters and scoring prioritize what matters (signals, relevance, impact).",
                        gptKind: "mixed", spKind: "check")

            @Row("Source trust",
                        gpt: "Citations are strong for web research.",
                        sp: "Traceability is built-in: every insight ties back to the original source inside the system.",
                        gptKind: "check", spKind: "check")

            @Row("Workflow output",
                        gpt: "Great answers — but you still organize the work.",
                        sp: "Finished product: structured feed, context, tags/themes, and a consistent UX.",
                        gptKind: "manual", spKind: "check")

            @Row("Weekly cadence",
                        gpt: "You decide when to research (and it slips).",
                        sp: "A consistent weekly digest / feed you can review in 10 minutes.",
                        gptKind: "manual", spKind: "check")

            @Row("Team adoption",
                        gpt: "Often operator-driven (someone runs the research).",
                        sp: "Shared workflow: predictable output your team can review together.",
                        gptKind: "mixed", spKind: "check")

            @Row("Total cost of ownership",
                        gpt: "Great tool — but it’s time-based (more value = more time spent researching).",
                        sp: "Maintained system with consistent output and a workflow your team can rely on.",
                        gptKind: "mixed", spKind: "check")

            @Row("Best use case",
                        gpt: "Ad-hoc questions: “What is X?” “Compare A vs B.”",
                        sp: "Ongoing awareness: “What should we pay attention to this week?”",
                        gptKind: "check", spKind: "check")

        </div>
    </section>

    <!-- CLOSE -->
    <footer class="vs-footer">
        <div class="vs-footer-inner">
            <h2>In short</h2>
            <p class="vs-footer-lead">
                <strong>Perplexity helps you research.</strong>
                <strong>Spydomo helps you stay ahead.</strong>
            </p>
            <p class="vs-footer-sub">
                If you want fast answers with citations, Perplexity is excellent.
                If you want a reliable weekly cadence of competitive signals — without manual research — that’s what Spydomo is built for.
            </p>
            <div class="vs-hero-actions">
                <a class="vs-btn primary" href="/pricing">Try it free</a>
                <a class="vs-btn" href="/use-cases">See use cases</a>
            </div>
        </div>
    </footer>

</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("scrollToTop");
        }
    }

    RenderFragment Row(string feature, string gpt, string sp, string gptKind, string spKind) => __builder =>
    {
        <div class="vs-row">
            <div class="vs-cell feature">
                <div class="vs-feature">@feature</div>
            </div>

            <div class="vs-cell">
                <div class="vs-pill @("k-" + gptKind)">
                    @Icon(gptKind)
                    <span>@Label(gptKind)</span>
                </div>
                <div class="vs-text">@gpt</div>
            </div>

            <div class="vs-cell sp">
                <div class="vs-pill @("k-" + spKind)">
                    @Icon(spKind)
                    <span>@Label(spKind)</span>
                </div>
                <div class="vs-text">@sp</div>
            </div>
        </div>
        ;
    };

    RenderFragment Icon(string kind) => __builder =>
    {
        if (kind == "check")
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M7.7 13.3 4.6 10.2a1 1 0 0 0-1.4 1.4l3.8 3.8a1 1 0 0 0 1.4 0l8.4-8.4a1 1 0 1 0-1.4-1.4l-7.7 7.7z" />
            </svg>
            ;
        }
        else if (kind == "manual")
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M4 10a6 6 0 1 1 6 6H6.5L4 18.5V16a6 6 0 0 1 0-6zm6-4a4 4 0 1 0 0 8 4 4 0 0 0 0-8z" />
            </svg>
            ;
        }
        else
        {
            <svg class="vs-ic" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M5 10a1 1 0 0 1 1-1h8a1 1 0 1 1 0 2H6a1 1 0 0 1-1-1z" />
            </svg>
            ;
        }
    };

    string Label(string kind) => kind switch
    {
        "check" => "Included",
        "manual" => "Manual",
        "mixed" => "Varies",
        _ => "Not included"
    };
}

